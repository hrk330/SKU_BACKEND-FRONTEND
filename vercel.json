{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "runtime": "python3.9",
                "installCommand": "pip install -r requirements-vercel.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "pricegov.production_settings"
    },
    "functions": {
        "api/index.py": {
            "maxDuration": 30
        }
    }
}